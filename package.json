{
	"name": "tsqllint-lite",
	"displayName": "tsqllint-lite",
	"description": "TSQLLint Check Tool",
	"version": "0.0.1",
	"publisher": "tsqllint-lite",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/masmgr/tsqllint-vscode-lite.git"
	},
	"engines": {
		"vscode": "^1.108.1"
	},
	"categories": ["Other"],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tsqllint-lite.run",
				"title": "TSQLLint: Run",
				"category": "TSQLLint"
			}
		],
		"configuration": {
			"title": "tsqllint-lite",
			"properties": {
				"tsqllint.path": {
					"type": "string",
					"default": "",
					"description": "Path to tsqllint executable."
				},
				"tsqllint.configPath": {
					"type": "string",
					"default": "",
					"description": "Path to tsqllint config file (passed with -c)."
				},
				"tsqllint.runOnSave": {
					"type": "boolean",
					"default": true,
					"description": "Run lint when a SQL document is saved."
				},
				"tsqllint.runOnType": {
					"type": "boolean",
					"default": false,
					"description": "Run lint while typing (debounced)."
				},
				"tsqllint.debounceMs": {
					"type": "number",
					"default": 500,
					"description": "Debounce time in milliseconds for run-on-type."
				},
				"tsqllint.timeoutMs": {
					"type": "number",
					"default": 10000,
					"description": "Timeout in milliseconds for lint execution."
				},
				"tsqllint.rangeMode": {
					"type": "string",
					"enum": ["character", "line"],
					"default": "character",
					"description": "Diagnostic range mode for reported issues."
				}
			}
		}
	},
	"scripts": {
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"build": "tsc -p tsconfig.json",
		"vscode:prepublish": "npm run build",
		"package": "vsce package",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"test": "vscode-test",
		"test:e2e": "vscode-test --config .vscode-test.e2e.mjs",
		"watch": "tsc -watch -p tsconfig.json"
	},
	"devDependencies": {
		"@types/vscode": "^1.108.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@biomejs/biome": "^1.9.4",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.2.1"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.11",
		"vscode-uri": "^3.0.8"
	}
}

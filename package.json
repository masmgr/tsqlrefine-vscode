{
	"name": "tsqlrefine",
	"displayName": "TSQLRefine",
	"description": "Lightweight T-SQL linter integration for VS Code using TSQLRefine",
	"version": "1.0.1",
	"publisher": "masmgr",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/masmgr/tsqllint-vscode-lite.git"
	},
	"bugs": {
		"url": "https://github.com/masmgr/tsqllint-vscode-lite/issues"
	},
	"homepage": "https://github.com/masmgr/tsqllint-vscode-lite#readme",
	"icon": "icon.png",
	"engines": {
		"node": ">=24.0.0",
		"vscode": "^1.108.1"
	},
	"categories": [
		"Linters",
		"Formatters",
		"Programming Languages"
	],
	"keywords": [
		"tsqlrefine",
		"t-sql",
		"sql",
		"linter",
		"mssql",
		"microsoft sql server",
		"transact-sql",
		"sql server",
		"database",
		"lint"
	],
	"activationEvents": [
		"onLanguage:sql",
		"onLanguage:tsql",
		"onLanguage:mssql"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tsqlrefine.run",
				"title": "TSQLRefine: Run",
				"category": "TSQLRefine"
			},
			{
				"command": "tsqlrefine.format",
				"title": "TSQLRefine: Format",
				"category": "TSQLRefine"
			},
			{
				"command": "tsqlrefine.openInstallGuide",
				"title": "TSQLRefine: Open Install Guide",
				"category": "TSQLRefine"
			}
		],
		"configuration": {
			"title": "tsqlrefine",
			"properties": {
				"tsqlrefine.path": {
					"type": "string",
					"default": "",
					"description": "Path to tsqlrefine executable."
				},
				"tsqlrefine.configPath": {
					"type": "string",
					"default": "",
					"description": "Path to tsqlrefine config file (passed with -c)."
				},
				"tsqlrefine.runOnSave": {
					"type": "boolean",
					"default": true,
					"description": "Run lint when a SQL document is saved."
				},
				"tsqlrefine.runOnType": {
					"type": "boolean",
					"default": false,
					"description": "Run lint while typing (debounced)."
				},
				"tsqlrefine.runOnOpen": {
					"type": "boolean",
					"default": true,
					"description": "Run lint when a SQL document is opened."
				},
				"tsqlrefine.debounceMs": {
					"type": "number",
					"default": 500,
					"description": "Debounce time in milliseconds for run-on-type."
				},
				"tsqlrefine.timeoutMs": {
					"type": "number",
					"default": 10000,
					"description": "Timeout in milliseconds for lint execution."
				},
				"tsqlrefine.maxFileSizeKb": {
					"type": "number",
					"default": 0,
					"description": "Maximum file size (KB) for automatic linting (open/save/type). 0 disables the limit."
				},
				"tsqlrefine.formatTimeoutMs": {
					"type": "number",
					"default": 10000,
					"description": "Timeout in milliseconds for format execution."
				}
			}
		},
		"languages": [
			{
				"id": "sql",
				"extensions": [
					".sql"
				]
			},
			{
				"id": "tsql",
				"extensions": [
					".sql"
				]
			},
			{
				"id": "mssql",
				"extensions": [
					".sql"
				]
			}
		]
	},
	"scripts": {
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"compile": "tsc -p tsconfig.json",
		"compile:test": "tsc -p tsconfig.test.json",
		"build": "node esbuild.mjs",
		"watch": "node esbuild.mjs --watch",
		"watch:tsc": "tsc -watch -p tsconfig.json",
		"vscode:prepublish": "npm run build -- --production",
		"package": "vsce package",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"test:unit": "npm run compile:test && mocha --config .mocharc.unit.json",
		"test:unit:coverage": "npm run compile:test && c8 mocha --config .mocharc.unit.json",
		"test:coverage": "npm run test:unit:coverage",
		"test:e2e": "npm run build && npm run compile:test && vscode-test",
		"test": "npm run test:unit",
		"prepare": "husky",
		"verify": "npm test && npm run typecheck && npm run lint && npm run format"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.9",
		"@types/vscode": "^1.108.1",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.2.1",
		"c8": "^10.1.3",
		"esbuild": "^0.27.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"mocha": "^11.7.5",
		"source-map-support": "^0.5.21",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.ts": [
			"biome format --write",
			"biome lint --fix"
		],
		"*.json": "biome format --write"
	},
	"dependencies": {
		"chardet": "^2.1.1",
		"iconv-lite": "^0.7.2",
		"vscode-languageclient": "^9.0.1",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.11",
		"vscode-uri": "^3.0.8"
	},
	"volta": {
		"node": "24.13.0",
		"npm": "11.6.2"
	}
}
